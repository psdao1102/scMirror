<header>
  <nav class="navbar navbar-default">
 
    <!-- application logo -->
    <a class="navbar-brand" href="/">
      <!-- application logo visible on large screens -->
      <img width="81" height="21" class="logo" alt="Screen Companion" src="/img/screen-companion-header-small.png">
      <!-- application logo visible on small screens -->
      <img width="21" height="21" class="logo-xs" alt="SC" src="/img/screen-companion-logo-128.png">
    </a>
 
    <!-- hamburger -->
    <a class="toggle-nav btn pull-left" href="#">
      <i class="icon-reorder"></i>
    </a>
 
    <!-- dropdowns -->
    <ul class="nav">
 
      {{#unless session.activeuser}}

        <!-- logged out: sign in link. -->
        <li class="dark">
          <a href="/user/login">
            <span class="user-name">Sign In</span>
          </a>
        </li>

      {{else}}

        <!-- logged in: show user menu dropdown -->
        <li class="dropdown dark user-menu">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">
            <img width="23" height="23" alt="Mila Kunis" src="/theme/html/assets/images/avatar.jpg">
            <span class="user-name">Jane Smith</span>
            <b class="caret"></b>
          </a>
          <a href="/user/management">
            <span>Profile</span>
          </a>
          <a href="/user/logout">
            <span>Sign Out</span>
          </a>
        </li>

      {{/unless}}

    </ul>
 
    <!-- search form - hidden on phone -->
    <!--
    <form action="/search" class="navbar-form navbar-right hidden-xs" method="get">
      <button class="btn btn-link icon-search" name="button" type="submit"></button>
      <div class="form-group">
        <input value="" class="form-control" placeholder="Search..." autocomplete="off" id="q_header" name="q" type="text">
      </div>
    </form>
    -->

  </nav>
</header>